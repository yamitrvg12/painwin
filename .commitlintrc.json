{
	"extends": ["@commitlint/config-conventional"],
	"formatter": "@commitlint/format",
	"rules": {
		"type-enum": [
			2,
			"always",
			[
				"feat",
				"fix",
				"docs",
				"style",
				"refactor",
				"perf",
				"test",
				"build",
				"chore",
				"ci",
				"improvement",
				"revert"
			]
		]
	}
}
